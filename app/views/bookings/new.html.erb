<div class="container mt-4" w-tid="22">
  <h1 class="text-center mb-4" w-tid="23">New Booking</h1>
  <div class="card mb-4" w-tid="24">
    <div class="card-body" w-tid="25">
      <h5 class="card-title" w-tid="26">Selected Flight</h5>
      <div class="bg-light p-3 rounded" w-tid="27">
        <div class="row align-items-center" w-tid="28">
          <div class="col-md-2 text-center" w-tid="29">
            <i class="bi bi-airplane fs-1 text-primary" w-tid="30"></i>
          </div>
          <div class="col-md-10" w-tid="31">
            <h6 class="mb-3" w-tid="32">Vladimir Airlines - Flight VL<%= @booking.flight_id %></h6>
            <div class="row" w-tid="33">
              <div class="col-md-6" w-tid="34">
                <p class="mb-1" w-tid="35"><strong w-tid="36">Departure:</strong> <%= @booking.flight.departure_airport.code %></p>
                <p class="mb-1" w-tid="37"><strong w-tid="38">Date:</strong> <%= @booking.flight.start_datetime.strftime('%A, %B %e, %Y') %></p>
                <p class="mb-1" w-tid="39"><strong w-tid="40">Time:</strong> <%= @booking.flight.start_datetime.strftime('%H:%M') %></p>
              </div>
              <div class="col-md-6" w-tid="41">
                <p class="mb-1" w-tid="42"><strong w-tid="43">Arrival:</strong> <%= @booking.flight.arrival_airport.code %></p>
              </div>
            </div>
            <p class="mb-1" w-tid="48"><strong w-tid="49">Duration:</strong> <%= min_to_hours(@booking.flight.flight_duration) %></p>
            <p class="mb-1" w-tid="50"><strong w-tid="51">Aircraft:</strong> Boeing 787 Dreamliner</p>
            <p class="mb-1" w-tid="52"><strong w-tid="53">Class:</strong> Economy</p>
            <p class="mb-1" w-tid="54"><strong w-tid="55">Price:</strong>
              <%= number_to_currency(rand(199..4000), unit: "$ ", separator: ".", delimiter: "", format: "%u%n") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'form' %>
</div>