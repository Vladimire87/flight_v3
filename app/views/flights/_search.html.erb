<%= form_with url: flights_path, method: :get, local: true do |f| %>
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-2">
      <%= f.collection_select :from, @airports, :id, :code,
        {prompt: 'From'},
        {class: 'form-select form-select-lg'} %>
    </div>
    <div class="col-2">
      <%= f.collection_select :to, @airports, :id, :code,
        {prompt: 'To'},
        {class: 'form-select form-select-lg'} %>
    </div>
    <div class="col-2">
      <%= f.select :date, options_for_select(@flight_dates.map{|date| [date, date]}),
        {prompt: 'Departure'},
        {class: 'form-select form-select-lg'} %>
    </div>
    <div class="col-2">
      <%= f.select :passengers, options_for_select(1..4),
        {prompt: 'Passengers'},
        {class: 'form-select form-select-lg'} %>
    </div>
    <div class="col-2 d-flex justify-content-center ">
      <%= f.submit "Search flights", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
